  <!--根据条件查询多条客房信息-->
  <select id="selManyByParams"  resultMap="roomsAndRoomType">
    select <include refid="Base_Column_List"/> from rooms
    <where>
      <if test="t.roomStatus!=null and t.roomStatus!=''">
        and room_status = #{t.roomStatus}
      </if>
      <if test="t.roomTypeId!=null">
        and room_type_id = #{t.roomTypeId}
      </if>
      and flag = '1'
    </where>
    order by id desc
  </select>

  <!--查询所有的客房以及其类型数据-->
  <select id="selAll" resultMap="roomsAndRoomType">
    select <include refid="Base_Column_List"/> from rooms where flag='1' order by id desc
  </select>

  <!--根据条件查询数据条数-->
  <select id="selCountByParams" resultType="java.lang.Long">
    select count(1) from rooms
    <where>
      <if test="roomNum!=null and roomNum!=''">
        and room_num = #{roomNum}
      </if>
      <if test="roomTypeId!=null">
        and room_type_id = #{roomTypeId}
      </if>
    </where>
